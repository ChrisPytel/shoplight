<header>
  <nav class="navbar">

    <div class="nav-left">
      <!-- if image doesnt load, upload it to another filesharing website like imgbox or imgur and relink below -->
      <a href="/"><img src="https://images2.imgbox.com/e2/8d/ZTZqA3Yu_o.png" alt="ShopLight Logo" width="250"></a>
    </div>

    <div class="nav-right">

      <% if (!cookieStored) { %>    <!-- If user cookie isnt stored as a logged in account, display options -->

      <a class="nav-item">
        <form method="GET" action="/login">
          <button class="logout-button" type="submit">Login</button>
        </form>
      </a class="nav-item">

      <a class="nav-item">
        <form method="GET" action="/register">
          <button class="logout-button"  type="submit">Register</button>
        </form>
      </a class="nav-item">

      <% } else { %>    <!-- If user is logged in with a cookie stored, display username and button for logout -->

        <a class="nav-link nav-search" href="/search" alt="Search"><i class="fa-solid fa-magnifying-glass"></i></a>
        <a class="nav-link nav-listings" href="/my-listings" alt="My Listings"><i class="fa-regular fa-rectangle-list"></i></a>
        <a class="nav-link nav-favourites" href="/favourites" alt="My Favourites"><i class="fa-regular fa-heart"></i></a>
        <a class="nav-link nav-messages" href="/messages" alt="My messages"><i class="fa-regular fa-comments"></i></a>

        <a class="nav-link logged-in-as"><b>Logged in as:</b> <%= displayName %></a>
        <a class="nav-link community"><b>Community:</b> Toronto Beaches</a>
        <form class="logout-button" method="POST" action="/logout">
          <button type="submit">Log Out</button>
        </form>

      <% } %>

    </div>
  </nav>
</header>
