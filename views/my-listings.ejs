<!DOCTYPE html>
<html lang="en">

<head>
  <title>My Listings</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/my-listings.js"></script>

  <!-- Bootstrap CSS -->
  <link
  rel="stylesheet"
  href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
  integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
  crossorigin="anonymous"/>

  <!-- Pre-installed CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/header.css" />
  <link rel="stylesheet" href="/styles/index.css" />
  <link rel="stylesheet" href="/styles/footer.css" />
  <link rel="stylesheet" href="/styles/my-listings.css" />

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Syne:wght@400..800&display=swap" rel="stylesheet">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_header') %>

  <!-- "Storefront" banner -->
  <section class="banner">
    <div>
      <!-- Maybe add a photo here, either zombie or stretch option to upload when registering -->
      <img src="">
    </div>
    <br>
  </section>

  
  <main>
    <section>
      <h1>Create a new listing:</h1>
      <!-- Form for new listing -->
      <form method="post" action="/my-listings" class="new-listing">
        <label for="name">Product name:</label>
        <input name="name-input" id="name-input" style="overflow:hidden" placeholder="Name of product"></textarea>
        <br>
        <label for="description">Product description:</label>
        <textarea name="description-input" id="description-input" style="overflow:hidden" placeholder="Product description"></textarea>
        <br>
        <label for="price">Price ($):</label>
        <input name="price-input" id="price-input" style="overflow:hidden" placeholder="Price"></textarea>
        <br>
        <label for="image url">Please attach an image URL:</label>
        <input name="image-input" id="image-input" style="overflow:hidden" placeholder="Image URL"></textarea>
        <br>
        <button type="submit" class="submit-listing">Create</button>
      </form>
    </section>
    <br>
    <!-- All existing listings here -->
    <section class="listings">
      <h1>My listings:</h1> 
      <% for (let listing of listings) { %>
        <div>
          <%=listing.name %>
          <!-- use HTML to add images, etc from listing -->
        </div>
      <% } %>
    </section>
  </main>
<%- include('partials/_footer.ejs') %>

</body>

</html>